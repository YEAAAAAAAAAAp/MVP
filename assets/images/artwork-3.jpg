<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4facfe;stop-opacity:1" />
      <stop offset="25%" style="stop-color:#00f2fe;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#43e97b;stop-opacity:1" />
      <stop offset="75%" style="stop-color:#38f9d7;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#ffecd2;stop-opacity:1" />
    </linearGradient>
    <pattern id="waves" x="0" y="0" width="80" height="40" patternUnits="userSpaceOnUse">
      <path d="M0 20 Q20 0 40 20 T80 20" stroke="#fff" stroke-width="2" fill="none" opacity="0.3"/>
    </pattern>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bg3)"/>
  
  <!-- Wave pattern overlay -->
  <rect width="400" height="300" fill="url(#waves)"/>
  
  <!-- Color bars representing symphony -->
  <rect x="50" y="80" width="15" height="140" fill="#ff6b6b" opacity="0.8" rx="7"/>
  <rect x="80" y="60" width="15" height="180" fill="#4ecdc4" opacity="0.8" rx="7"/>
  <rect x="110" y="100" width="15" height="100" fill="#ffe66d" opacity="0.8" rx="7"/>
  <rect x="140" y="40" width="15" height="220" fill="#a8e6cf" opacity="0.8" rx="7"/>
  <rect x="170" y="90" width="15" height="120" fill="#ffd93d" opacity="0.8" rx="7"/>
  <rect x="200" y="70" width="15" height="160" fill="#ff8b94" opacity="0.8" rx="7"/>
  <rect x="230" y="110" width="15" height="80" fill="#b4e7ce" opacity="0.8" rx="7"/>
  <rect x="260" y="50" width="15" height="200" fill="#c7ceea" opacity="0.8" rx="7"/>
  <rect x="290" y="85" width="15" height="130" fill="#f8b500" opacity="0.8" rx="7"/>
  <rect x="320" y="95" width="15" height="110" fill="#ff9a9e" opacity="0.8" rx="7"/>
  
  <!-- Musical notes -->
  <circle cx="150" cy="50" r="8" fill="#fff" opacity="0.9"/>
  <rect x="158" y="30" width="2" height="20" fill="#fff" opacity="0.9"/>
  
  <circle cx="250" cy="45" r="8" fill="#fff" opacity="0.7"/>
  <rect x="258" y="25" width="2" height="20" fill="#fff" opacity="0.7"/>
  
  <!-- Title -->
  <text x="200" y="35" text-anchor="middle" fill="#fff" font-family="Arial, sans-serif" font-size="20" font-weight="bold" opacity="0.9">
    색채의 교향곡
  </text>
  
  <!-- Artist signature -->
  <text x="360" y="280" text-anchor="end" fill="#fff" font-family="Arial, sans-serif" font-size="12" opacity="0.7">
    이화가
  </text>
</svg>